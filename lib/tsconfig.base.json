{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "plugins": [
      { "name": "@effect/language-service" }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/scratch/*"]
}
